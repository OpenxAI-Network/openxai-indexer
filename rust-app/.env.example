# OpenxAI Indexer Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server hostname (default: 0.0.0.0)
HOSTNAME=0.0.0.0

# Server port (default: 36092)
PORT=36092

# Logging level (default: warn)
RUST_LOG=warn

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Chain ID (default: 8453 for Base)
CHAINID=8453

# HTTP RPC endpoint (default: Base public node)
HTTPRPC=https://base-rpc.publicnode.com

# WebSocket RPC endpoint (default: Base public node)
WSRPC=wss://base-rpc.publicnode.com

# =============================================================================
# SMART CONTRACT ADDRESSES
# =============================================================================

# Claimer contract address (default: 0xc749169dB9C231E1797Aa9cD7f5B7a88AeD25b08)
CLAIMER=0xc749169dB9C231E1797Aa9cD7f5B7a88AeD25b08

# Genesis contract address (default: 0x84599c907B42e9bc21F9FE26D9e5A5D3747109D3)
GENESIS=0x84599c907B42e9bc21F9FE26D9e5A5D3747109D3

# OwnAI V1 contract address (default: 0x5d3a48B6f16Ba9a830b19B452d8DAA0409e0FE05)
OWNAIV1=0x5d3a48B6f16Ba9a830b19B452d8DAA0409e0FE05

# Deposit contract address (default: 0x1EdE9dE47e5E3B8941884e7f5DDa43D82570180D)
DEPOSIT=0x1EdE9dE47e5E3B8941884e7f5DDa43D82570180D

# USDC contract address (default: 0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913)
USDC=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# =============================================================================
# PRIVATE KEYS (REQUIRED - NO DEFAULTS)
# =============================================================================

# Claimer private key (64-character hex string without 0x prefix)
# Example: ac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
CLAIMERKEY=your_claimer_private_key_here

# Token owner private key (64-character hex string without 0x prefix)
# Example: ac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
TOKENOWNERKEY=your_token_owner_private_key_here

# Token minter private key (64-character hex string without 0x prefix)
# Example: ac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
TOKENMINTERKEY=your_token_minter_private_key_here

# Manual token signer private key (64-character hex string without 0x prefix)
# Example: ac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
MANUALTOKENSIGNER=your_manual_token_signer_private_key_here

# =============================================================================
# API KEYS (REQUIRED - NO DEFAULTS)
# =============================================================================

# Hyperstack API key (UUID format: xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx)
# Example: 12345678-1234-1234-1234-123456789abc
# NEVER use the exposed key: 7eeb6090-7fe6-48c5-ab6e-7d7d88b529fd
HYPERSTACKAPIKEY=your_hyperstack_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database connection string
# Format: postgres://username:password@host:port/database
# Default: postgres:openxai-indexer?host=/run/postgresql (Unix socket)
DATABASE=postgres://username:password@localhost:5432/openxai_indexer

# =============================================================================
# SERVICE ENDPOINTS
# =============================================================================

# Subdomain distributor service URL (default: http://subdomain-distributor.local:42923)
SUBDOMAINDISTRIBUTOR=http://subdomain-distributor.local:42923

# =============================================================================
# PRICING CONFIGURATION
# =============================================================================

# OwnAI V1 token price in smallest unit (default: 100000000)
OWNAIV1PRICE=100000000

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# 1. NEVER commit this file with real values to version control
# 2. Use strong, unique private keys for each environment
# 3. Rotate API keys regularly (every 90 days minimum)
# 4. Use environment-specific values for production vs development
# 5. Ensure database credentials have minimal required permissions
# 6. Monitor API usage for anomalies
# 7. Use principle of least privilege for all keys and credentials
#
# =============================================================================